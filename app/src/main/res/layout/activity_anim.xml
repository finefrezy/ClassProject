<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帧动画" />

            <Button
                android:id="@+id/start_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始" />

            <Button
                android:id="@+id/stop_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束" />

        </LinearLayout>

        <ImageView
            android:id="@+id/anim_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/anim_paly" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="补间动画" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/rotate_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旋转" />

            <Button
                android:id="@+id/translate_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移动" />

            <Button
                android:id="@+id/scale_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缩放" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/alpha_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="透明度" />

            <Button
                android:id="@+id/set_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="集合动画" />

        </LinearLayout>

        <ImageView
            android:id="@+id/tween_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/share_btn_logo_qq" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="属性动画--xml" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/value_object_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ValuAnimiator" />

            <Button
                android:id="@+id/object_object_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ObjectAnimiator" />


        </LinearLayout>

        <Button
            android:id="@+id/set_object_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SetAnimiator" />


        <ImageView
            android:id="@+id/object_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logo_pro_logo_weixin"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="属性动画--代码" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/rotate_property_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旋转—属性" />

            <Button
                android:id="@+id/alsc_property_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多组动画—属性" />
            <Button
                android:id="@+id/values_holder_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="valuesholder—属性" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_liutao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/index_daily_ban2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/vertical_property_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自由落体" />

            <Button
                android:id="@+id/pwx_property_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抛物线" />
            
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/image_sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/desklrc_color_1"
               />




        </LinearLayout>

    </LinearLayout>




</ScrollView>
